<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/secondary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskInfo">

    <ImageButton
        android:id="@+id/btn_back_main"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/arrow_back_24"
        android:tint="@color/primary"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/textTask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTask">


        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Descrição"
            android:textColor="@color/primary"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/description_view_task"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext"
            android:ems="10"
            android:hint="text"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/text"
            android:textColorHint="@color/text"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:textSize="16dp"
                android:text="Categoria: "

                />

            <Spinner
                android:id="@+id/category_view_task"
                android:background="@drawable/custom_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:textSize="16dp"
                android:text="Data: " />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/date_view_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textSize="16dp"
                    android:text="Text"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


                <Button
                    android:id="@+id/btn_select_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecionar data"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/secondary"
                    app:cornerRadius="20dp"

                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:textSize="16dp"
                android:text="Status: " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status_view_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textSize="16dp"
                    android:text="Text"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_ready"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marcar como concluida"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/secondary"
                    app:cornerRadius="20dp"

                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <Button
                android:id="@+id/btn_save_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Salvar"
                android:layout_weight="1"
                android:backgroundTint="@color/primary"
                android:textColor="@color/secondary"
                />


            <Button
                android:id="@+id/btn_delete_task"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Deletar"
                android:layout_weight="1"
                android:backgroundTint="@color/text"
                android:textColor="@color/secondary"
                />

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/textTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="tarefa"
        android:padding="24dp"
        android:background="@drawable/custom_edittext"
        android:textAlignment="textStart"
        android:textColor="@color/primary"
        android:textSize="30dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="@color/text"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_main" />

</androidx.constraintlayout.widget.ConstraintLayout>