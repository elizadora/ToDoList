<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    tools:context=".AddTask">


    <ImageButton
        android:id="@+id/btn_back_main"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/arrow_back_24"
        android:tint="@color/primary"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/textTask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTask">

        <EditText
            android:id="@+id/title_task"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext"
            android:ems="10"
            android:hint="titulo*"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="@color/text"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/description_task"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/custom_edittext"
            android:ems="10"
            android:gravity="start|top"
            android:hint="descrição"
            android:layout_marginTop="40dp"
            android:inputType="textMultiLine"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/text"
            />

        <Spinner
            android:id="@+id/category_task"
            android:background="@drawable/custom_spinner"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <Button
                android:id="@+id/date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecionar data"
                android:backgroundTint="@color/primary"
                android:textColor="@color/secondary"
                app:cornerRadius="20dp"

                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/date_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="DATA"
                android:layout_marginLeft="30dp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_register_task"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:clickable="true"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/primary"
            android:textColor="@color/secondary"
            app:cornerRadius="20dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Cria sua nova tarefa"
        android:textAlignment="center"
        android:textColor="@color/primary"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_main" />


</androidx.constraintlayout.widget.ConstraintLayout>